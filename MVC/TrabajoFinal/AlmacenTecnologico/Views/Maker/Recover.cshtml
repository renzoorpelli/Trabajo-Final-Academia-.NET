@model List<AlmacenTecnologico.Models.ViewModel.FabricanteViewModel>

@{
    ViewData["Title"] = "Panel Fabricantes Eliminados";
}
<div class="text-center">
    <h1 class="display-4">Recuperar Fabricantes</h1>
    <hr />
</div>
<div class="mb-3">
    @if (Model != null && Model.Count > 0)
    {
        <form method="post">
            <table class="table table-striped table-hover">
                <tr>
                    <th>#</th>
                    <th>Nomnbre</th>
                    <th colspan="2">Estado</th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>Eliminado</td>
                        <td>
                            <input type="submit" class="btn btn-warning" value="Recuperar" asp-area="" asp-controller="maker" asp-action="recover" asp-route-id="@item.Id" />
                        </td>
                    </tr>
                }
            </table>
        </form>
    }
    else
    {
        <div class="text-center">
            <h1 class="display-4">No hay Fabricantes elimninados en el sistema :(</h1>
        </div>
        <div>
            <a class="btn btn-success" asp-area="" asp-controller="maker" asp-action="index">Volver al dashboard</a>
        </div>
    }

</div>