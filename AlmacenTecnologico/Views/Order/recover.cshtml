@model List<AlmacenTecnologico.Models.ViewModel.PedidoViewModel>
@{
    ViewData["Title"] = "Panel Pedidos";
}
<div class="text-center">
    <h1 class="display-4">Panel Pedidos Eliminados</h1>
    <hr />
</div>
<div class="mb-3">
    @if (Model != null && Model.Count > 0)
    {
        <div class="align-content-lg-end mb-3">
            <a class="btn btn-success" asp-area="" asp-controller="order" asp-action="index">Volver al inicio</a>
        </div>
        <form method="post">
            <table class="table table-striped table-hover">
                <tr>
                    <th>#</th>
                    <th>Cliente</th>
                    <th>Venta realizada por </th>
                    <th>Fecha</th>
                    <th colspan="2">Estado</th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Cliente.RazonSocial</td>
                        <td>@item.Empleado.Nombre</td>
                        <td>@item.FechaPedido.ToString("dd/MM/yyyy")</td>
                        <td>Eliminado</td>
                        <td><input class="btn btn-success" type="submit" value="Recuperar pedido" asp-area="" asp-controller="order" asp-action="recover" asp-route-id="@item.Id" /></td>
                    </tr>
                }
            </table>
        </form>
    }
    else
    {
        <div class="text-center">
            <p>No hay pedidos eliminados en el sistema :(</p>
        </div>
        <div>
            <a class="btn btn-success" asp-area="" asp-controller="order" asp-action="index">Volver al inicio</a>
        </div>
    }

</div>