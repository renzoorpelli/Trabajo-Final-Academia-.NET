@model AlmacenTecnologico.Models.ViewModel.EmpleadoViewModel

@if (Model != null)
{
    <div class="align-content-center">

        <div class="mb-3">
            <h1 class="display-4">Eliminar  Libro:</h1>
            <hr />
        </div>
        <form method="post">
            @Html.HiddenFor(l => l.Id)
            <div>
                <div class="card text-center card text-bg-danger mb-3">
                    <div class="card-header">
                        Identificador Empleado : @Model.Id
                    </div>
                    <div class="card-body">

                        <p class="card-text">Nombre: @Model.Nombre</p>
                        <p class="card-text">Nombre: @Model.Apellido</p>
                        <p class="card-text">Nombre: @Model.DNI</p>
                        <input type="submit" class="btn btn-danger" value="Eliminar Empleado" />
                        <a asp-area="" asp-controller="employee" asp-action="index" class="btn btn-primary">Volver al inicio</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
}
else
{
    <p>No hay registros para eliminar :(</p>
}
